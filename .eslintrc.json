{
  "root": true,
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "airbnb-base"
  ],
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "rules": {
    "linebreak-style": ["error", "unix"],
    "no-shadow": 0, // variable shadowing inside inner blocks
    "no-param-reassign": 0 // function parameters reassignment
  }
}
